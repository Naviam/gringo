<header class="container">
	<div class="row">
		<div class="col-sm-12">
			<form class="form-horizontal">
				<h3>Добавить раздел меню</h3>
				<div class="form-group">
				    <label for="menuSectionName" class="col-sm-2 col-md-1 control-label">Название</label>
				    <div class="col-sm-10 col-md-11">
				    	{{input id="menuSectionName" type="text" class="form-control" value=menuSectionName placeholder="Введите название"}}
				    </div>
				</div>
				<div class="form-group">
				    <label for="menuSectionDescription" class="col-sm-2 col-md-1 control-label">Описание</label>
				    <div class="col-sm-10 col-md-11">
				    	{{input id="menuSectionDescription" type="text" class="form-control" value=menuSectionDescription placeholder="Кратко опишите какие блюда содержаться в данном разделе меню"}}
				    </div>
				</div>
				<button type="submit" class="btn btn-default" {{action "createMenuSection"}}>Добавить раздел</button>
			</form>
		</div>
	</div>
</header>
<hr/>
{{#each section in model}}
<section class="container">
	<h3>{{section.name}}</h3>
	<a href="#" class="btn btn-sm btn-danger" role="button" {{action "deleteMenuSection" section}}>Удалить раздел</a>
	<div class="row">
		{{#each dish in section.dishes}}
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<img src="" alt="...">
				<div class="caption">
					<h3>Название Блюда</h3>
					<p>Описание</p>
					<p><a href="#" class="btn btn-primary" role="button">Заказать</a></p>
				</div>
			</div>
		</div>
		{{/each}}
		<div class="col-sm-12 col-md-12">
			<div class="thumbnail">
				<div class="caption">
					<h3>Добавить блюдо в раздел</h3>
					{{input type="text"   value=dishName placeholder="Название блюда" }}
					{{input type="text"   value=dishDescription placeholder="Описание блюда" }}
					{{input type="number" value=dishWeight placeholder="Вес порции" }}
					{{input type="money"  value=dishPrice }}
					{{input type="checkbox" checked=dishAvailable}}
					<p><a href="#" class="btn btn-primary" role="button">Добавить</a></p>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<img src="" alt="...">
				<div class="caption">
					<h3>Название Блюда</h3>
					<p>Описание</p>
					<p><a href="#" class="btn btn-primary" role="button">Заказать</a></p>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<img src="" alt="...">
				<div class="caption">
					<h3>Название Блюда</h3>
					<p>Описание</p>
					<p><a href="#" class="btn btn-primary" role="button">Заказать</a></p>
				</div>
			</div>
		</div>
		<div class="col-sm-6 col-md-4">
			<div class="thumbnail">
				<img src="" alt="...">
				<div class="caption">
					<h3>Название Блюда</h3>
					<p>Описание</p>
					<p><a href="#" class="btn btn-primary" role="button">Заказать</a></p>
				</div>
			</div>
		</div>
	</div>
</section>
{{else}}
	<section class="container">
		<h3>Ни одного раздела меню не было создано.</h3>
	</section>
{{/each}}
{{outlet}}
