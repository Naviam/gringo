<div class="caption">
	<h3>Добавить блюдо в раздел</h3>
	<div class="form-group">
	    <label for="dishName">Название</label>
		{{input id="dishName" type="text" value=dishName placeholder="Название блюда" }}
	</div>
	<div class="form-group">
	    <label for="dishDescription">Описание</label>
		{{textarea id="dishDescription" type="text" value=dishDescription placeholder="Описание блюда" }}
	</div>
	<div class="form-group">
	    <label for="dishWeight">Описание</label>
		{{input id="dishWeight" type="number" value=dishWeight placeholder="Вес порции" }}
	</div>
	<div class="form-group">
	    <label for="dishPrice">Описание</label>
		{{input id="dishPrice" type="money" value=dishPrice placeholder="Цена за порцию" }}
	</div>
	<div class="form-group">
    	<label for="exampleInputFile">Фотография блюда</label>
    	<input type="file" id="exampleInputFile">
    	<p class="help-block">Добавить фотографию блюда.</p>
  	</div>
  	<div class="checkbox">
    	<label>
    		{{input type="checkbox" checked=dishAvailable }} Есть в наличии
    	</label>
  	</div>
	<p><a href="#" class="btn btn-primary" role="button" {{action "addDish"}}>Добавить</a></p>
</div>
{{yield}}